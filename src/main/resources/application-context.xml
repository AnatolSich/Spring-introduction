<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="com.example.springintroduction."/>
    <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>

    <context:property-placeholder location="classpath:application.properties"/>

    <bean id="userDAO" class="com.example.springintroduction.dao.impl.UserDAO" init-method="initStorage"/>
    <bean id="eventDAO" class="com.example.springintroduction.dao.impl.EventDAO" init-method="initStorage"/>
    <bean id="ticketDAO" class="com.example.springintroduction.dao.impl.TicketDAO" init-method="initStorage"/>

    <bean id="userService" class="com.example.springintroduction.service.impl.UserServiceImpl"/>
    <bean id="eventService" class="com.example.springintroduction.service.impl.EventServiceImpl"/>
    <bean id="ticketService" class="com.example.springintroduction.service.impl.TicketServiceImpl"/>

    <bean id="bookingFacade" class="com.example.springintroduction.facade.BookingFacadeImpl"/>

    <bean id="storageUtil" class="com.example.springintroduction.storage.StorageUtil"/>

</beans>